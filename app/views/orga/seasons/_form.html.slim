= simple_form_for([:orga, @season]) do |f|
  = f.error_notification

  .form-inputs.clearfix
    = f.input :name, label: 'Year'
    = f.input :starts_at, wrapper_html: { class: 'col-sm-2' }
    = f.input :ends_at, wrapper_html: { class: 'col-sm-2' }
    = f.input :applications_open_at, as: :date, wrapper_html: { class: 'col-sm-2' }
    = f.input :applications_close_at, as: :date, wrapper_html: { class: 'col-sm-2' }
    = f.input :acceptance_notification_at, wrapper_html: { class: 'col-sm-2' }

  .form-actions
    = f.button :submit
