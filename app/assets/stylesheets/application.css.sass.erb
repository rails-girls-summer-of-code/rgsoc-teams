@import "mixins"
@import "vars-bootstrap"
@import "vars-font_awesome"
@import "bootstrap"
@import "font-awesome"

*
  box-sizing: border-box

body
  z-index: 0
  position: relative
  width: 1026px
  margin: 0 auto
  padding-bottom: 5em
  &:before
    z-index: -1
    position: absolute
    left: -500%
    top: 0
    width: 1000%
    height: 66px
    background-color: rgb(222, 57, 12)
    content: ' '

li
  list-style-type: none


header
  h1
    display: inline-block
    margin: 0
    width: 210px
    height: 58px

    a
      display: block
      overflow: hidden
      width: 210px
      height: 58px
      line-height: 4em
      background-image: url(<%= asset_path('header_logo.png') %>)
      background-repeat: no-repeat
      background-position: 0px 7px

  nav
    clear: right
    float: right
    @include clearfix

    &.top
      ul
        text-align: center
        position: relative
        top: 5px

      li
        display: inline-block
        margin: 1em 0 0 0

        &:last-child:after
          content: none

        &:after
          content: ''
          display: inline-block
          height: 20px
          width: 40px
          background: url(<%= asset_path('star.png') %>) 16px 8px no-repeat

        a
          display: inline-block
          height: 48px
          color: white
          text-decoration: none

          &.active
            text-decoration: underline
            background-image: url(<%= asset_path('header_nav_active.png') %>)
            background-repeat: no-repeat
            background-position: center 32px
            text-decoration: none

    &.user
      font-size: 0.9em
      color: $gray

nav
  .back:before
    content: '\2190'
    display: inline-block
    position: absolute
    margin-left: -1.5em
    margin-top: -1px

  &.page
    font-size: 0.9em

  &.actions
    clear: right
    float: right
    width: 120px
    margin-top: 1em
    font-size: 0.9em

.btn
  white-space: nowrap

#content
  margin-top: 3em

  h1
    font-size: 2em

  h3
    font-size: 1.25em
    margin-bottom: 0

  h4
    font-size: 1.15em

  p
    margin-bottom: 1em

  .profile
    img
      float: left
      width: 180px
      height: 180px
      margin-right: 2em
      border-radius: 10px

  .profile, .mailing
    dl
      margin-bottom: 1em
      @include clearfix
    dt
      float: left
      width: 100px
      font-weight: normal

  .sources, .teams, .profiles
    li
      list-style-type: disc

  .mailing
    dt
      width: 70px
    dt, dd
      color: #999
    .body
      margin-bottom: 1em
      padding: 2em
      border: 1px solid #ddd
      border-radius: 5px
      li
        list-style-type: disc
      *:last-child
        margin-bottom: 0

.activities
  h4
    margin: 0
    font-size: 1em
    font-weight: normal
  .feed_entry h4
    @include icon-before($pencil)
  .mailing h4
    @include icon-before($envelope-alt)
  .info
    padding-left: 2em
    font-size: 0.9em
  aside
    float: right
    margin-top: 0.5em
  a.atom
    display: inline-block
    height: 32px
    line-height: 32px
    padding-right: 36px
    background: url(<%= asset_path('feed.png') %>) no-repeat right
    background-size: 24px 24px
    // @include icon-after($rss)

ul.activities
  margin-left: 0

.pagination-info
  color: #999

.pages
  #content
    width: 700px

  aside
    position: absolute
    right: 0
    width: 220px
    ul
      margin-left: 0

.github
  @include icon-after($github-alt)

.twitter
  @include icon-after($twitter)

.team
  @include icon-before($star-empty)
  &.sponsored
    @include icon-before($star)

.hint
  font-size: 0.9em
  color: #666
  i
    margin-right: 0.25em


form
  position: relative
  // hrmmm
  input, select, textarea
    margin-bottom: 0 !important
    font-size: 0.9em !important
  input
    height: auto !important
  input[type=radio], input[type=checkbox]
    margin-left: 0 !important
    margin-right: 0.5em !important
  textarea
    width: 100%
    height: 200px
  label.radio, label.checkbox
    display: inline-block
    padding-left: 0
    padding-right: 1em
  select.short
    width: 110px

  .help-block
    font-size: 0.8em

  h4
    margin-top: 2em

  .members, .sources
    display: table
    margin-bottom: 1em
    .header, & > .fields
      display: table-row
    label, .control-group
      display: table-cell
      padding: 0 1em 0.5em 0
  .members
    & > .fields:nth-of-type(2) a.remove_nested_fields
      display: none
    a
      font-size: 0.9em

// Error message on submit
#error_explanation
  border: 1px solid #ccc
  padding: 10px 20px
  background-color: red
  color: #fff
  margin-bottom: 30px
  font-size: 0.9em

  h2
    font-size: 1em

.field_with_errors input
  border-color: red

// page-header

h1.header
  i, span
    display: inline-block
  span
    margin-left: 10px

